<h2 class="pt-5">Select a playlist</h2>
<div class="search-box pt-2">
  <%= form_with url: new_game_path, method: :get, id:"search-form" do %>
    <%= text_field_tag :playlist, params[:playlist], data: { action: "keyup->games#updatelist" }, class: "form-control", placeholder: "Find a Playlist.." %>
    <%= text_field_tag :spotify_playlist_id, nil, data: { games_target: "input" }, class: "d-none" %>

    <div class="d-flex flex-wrap pt-3 pb-3 gap-3 justify-content-center" data-games-target="list">
      <%= render "list" if defined?(playlists) %>
    </div>

    <%= button_tag "Next", type: "submit", class: "btn_pink_lg" %>
  <% end %>
</div>
