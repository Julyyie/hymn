<div class="pt-5">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
     <div class="pt-3">
        <%= f.input :email,
                    label: false,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: "yourname@mail.com" %>
        <%= f.input :password,
                    label: false,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    placeholder: "Your password" %>
        <h3><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></h3>
      </div>
    </div>

  <div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class:"btn_pink_lg" %>
      </div>
    <% end %>
      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
