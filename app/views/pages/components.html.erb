   <div class="avatar-highlight second">
      <%= image_tag "https://res.cloudinary.com/dwvaux61b/image/upload/v1678368746/development/96kbjt8rge19v242mrkcg79ql085.jpg", id: "profil_round_second", alt: "my_profil" %>
      <h3>2</h3>
    </div>

    <div class="avatar-highlight first">
      <%= image_tag "https://res.cloudinary.com/dwvaux61b/image/upload/v1678368746/development/96kbjt8rge19v242mrkcg79ql085.jpg", id: "profil_round_first", alt: "my_profil" %>
      <h3>1</h3>
    </div>

    <div class="avatar-highlight third">
      <%= image_tag "https://res.cloudinary.com/dwvaux61b/image/upload/v1678368746/development/96kbjt8rge19v242mrkcg79ql085.jpg", id: "profil_round_third", alt: "my_profil" %>
      <h3>3</h3>
    </div>
